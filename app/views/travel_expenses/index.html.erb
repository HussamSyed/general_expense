<h1>Travel Expenses</h1>

<table>
  <tr>
    <th>Trip</th>
    <th>Amount</th>
    <th>Reimbursable?</th>
    <th>Date</th>
    <th>Method of Payment</th>
    <th>Seller</th>
    <th>Purpose</th>
    <th>Details</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @travel_expenses.each do |travel_expense| %>
  <tr>
    <td><%= travel_expense.travel.destination + 
        " (" + travel_expense.travel.start_date.strftime("%m/%d/%Y") + " to " +
        travel_expense.travel.end_date.strftime("%m/%d/%Y") + ")" %>
    </td>
    <td><%= travel_expense.amount %></td>
    <td><%= travel_expense.reimbursable ? 'Yes' : 'No' %></td>
    <td><%= travel_expense.date %></td>
    <td><%= travel_expense.method_of_payment %></td>
    <td><%= travel_expense.seller %></td>
    <td><%= travel_expense.purpose %></td>
    <td><%= travel_expense.details %></td>
    <td><%= link_to 'Show', travel_expense %></td>
    <td><%= link_to 'Edit', edit_travel_expense_path(travel_expense) %></td>
    <td><%= link_to 'Destroy', travel_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

