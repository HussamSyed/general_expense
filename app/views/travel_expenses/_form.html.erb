<%= simple_form_for(@travel_expense) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :travel_id, :collection => Travel.order("destination DESC"), 
      :label_method => lambda{|trip| trip.destination + 
        " (" + trip.start_date.strftime("%B %d, %Y") + " to " +
        trip.end_date.strftime("%B %d, %Y") + ")" }, 
      :value_method => :id,
      :include_blank => false  %>
    <%= f.input :amount %>
    <%= f.input :reimbursable %>
    <%= f.input :date %>
    <%= f.input :method_of_payment %>
    <%= f.input :purpose %>
    <%= f.input :details, :input_html => {:rows => 5, :cols => 20}%>
    <%= f.input :seller %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Expense" %>
  </div>
<% end %>
