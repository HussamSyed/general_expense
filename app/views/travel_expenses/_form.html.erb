<%= simple_form_for(@travel_expense) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :travel_id, :collection => Travel.all, :label_method => @travelDescrWithDates, :value_method => :id  %>
    <%= f.input :amount %>
    <%= f.input :date %>
    <%= f.input :method_of_payment %>
    <%= f.input :details, :input_html => {:rows => 5, :cols => 20}%>
    <%= f.input :purpose %>
    <%= f.input :seller %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Expense" %>
  </div>
<% end %>
