<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client_id %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.select :taxpayer_type, ["Individual", "Business"] %>
    <%= f.input :phone_number %>
    <%= f.input :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
