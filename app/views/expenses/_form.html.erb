<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.file_field :receipt %>
  </div>
  <div class="form-inputs">
    <%= f.input :online %>
    <%= f.input :description, :input_html => {:rows => 5, :cols => 20} %>
    <%= f.input :comments, :input_html => {:rows => 5, :cols => 20} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
