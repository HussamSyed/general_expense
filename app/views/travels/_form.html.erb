<%= simple_form_for(@travel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :destination %>
    <%= f.input :purpose %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Trip" %>
  </div>
<% end %>
