<h1>Vehicles</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Make</th>
    <th>Model</th>
    <th>Business Vehicle?</th>
    <th>Vin</th>
    <th>Reg no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.year %></td>
    <td><%= vehicle.make %></td>
    <td><%= vehicle.vehicle_model %></td>
    <td><%= vehicle.business_vehicle ? 'Yes' : 'No' %></td>
    <td><%= vehicle.vin %></td>
    <td><%= vehicle.reg_no %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

